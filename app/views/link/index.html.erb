<div class='span-24 last'>
  <div class='span-24 last' id='links'>
    <%= paginate @links %>
    <%= content_tag('h3', "Recent Links", :class => '') %>
    <table>
      <tr><th>URL</th><th>Created</th><th>Updated</th><th>Processed?</th><th>Error?</th></tr>
    <% @links.each do |link| %>
      <tr>
        <td><%= link_to link.url.truncate(50), link_path(link) %></td>
        <td><%= distance_of_time_in_words(link.created_at, Time.now) %> ago</td>
        <td><%= distance_of_time_in_words(link.updated_at, Time.now) %> ago</td>
        <td><%= link.processed? ? 'Yes' : 'No' %></td>
        <td><%= link.error.nil? ? 'No' : 'Yes' %></td>
      </td>
    <% end %>
    </table>
  </div>
  
  <%= form_for :link, :url => {:controller => 'link'} do |f| %>
    <p>
      <%= f.label :url, "Url" %><br/>
      <%= f.text_field :url %>
    </p>
    <p>
      <%= f.label :user_agent, "User Agent" %><br/>
      <%= select_tag "user_agent", options_from_collection_for_select(UserAgent.all, "id", "name")%>
    </p>
    <p>
      <%= f.submit "Submit", :disable_with => 'Submiting...' %>
    </p>
  <% end -%>
</div>